<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/viicon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_KhachHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Ten khách hàng:"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_NoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="20dp"
            android:paddingLeft="10dp"
            android:text="Nd chat cuối ..."
            android:textColor="#142739"
            android:textSize="14dp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/add_contacts"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/add_contact" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Xóa"
        android:textColor="@color/red"
        android:textSize="14dp"
        android:textStyle="bold" />
</LinearLayout>
